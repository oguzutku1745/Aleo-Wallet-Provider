{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "lib": ["dom", "esnext"],
      "jsx": "react-jsx",
      "declaration": true,
      "declarationDir": "dist",
      "outDir": "dist",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }